---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";
import References from "../components/References.astro";
---

<!doctype html>
<html lang="en-GB" data-bs-theme="auto" data-bs-theme-value="auto">
    <head>
        <!-- General HTML meta -->
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>UK Trans Rights</title>

        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

        <!-- Other metadata -->
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Autumn R" />
        <meta name="application-name" content="TransRights.xyz" />
        <meta name="keywords" content="trans,transgender,uk,law,rights,human rights" />
    </head>

    <body class="d-flex flex-column">
        <Header />

        <main class="container-fluid d-flex column-gap-3 bg-body-secondary py-3" style="flex-grow: 1;">
            <Nav />
            <div class="container ">
                <slot />
            </div>
        </main>

        <Footer />
    </body>
</html>

<style is:global>
    html, body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    blockquote {
        padding-left: 2em;
        text-align: justify;
        width: 80%
    }

    blockquote::before {
        content: "\F6B0";
        font-family: bootstrap-icons;
        font-size: x-large;
    }

    .block {
        --bs-bg-opacity: 1;
        background-color: rgba(var(--bs-body-bg-rgb),var(--bs-bg-opacity)) !important;
        border-radius: 1em;
        padding: 2em;
    }

     .tab-link {
         cursor: pointer;
     }

    .clickable {
        cursor: pointer;
        color: rgba(var(--bs-link-color-rgb),var(--bs-link-opacity,1));
        text-decoration: underline;
    }
</style>
